<main>
  <p class="notion"></p>
  <div class="container">
    <% if @book.errors.any? %>
    <div class="error_explanation">
      <ul class="alert alert-danger" role="alert">
      <h6 class="alert-heading">
      <%= @book.errors.count %> errors prohibited this obj from being saved:
      </h6>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </ul>
    </div>
    <% end %>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="form-group" >
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="inputBody">Opinion</label>
          <%= f.text_area :body, autofocus: true, id:"inputBody", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</main>